<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".divNameContainer").hide();
        $(".divLastName").hide();

        $("Select[name='DocumentType']").change(function () {
            $(".divNameContainer").show()
            if ($(this).val() === "DNI") {
                $(".divNameContainer").show()
                $(".divLastName").show()
                $(".divName p").text('Nombre');
            }
            else {
                $(".divLastName").hide();
                $(".divName p").text('Razon Social');
            }
        });
    });
</script>



<form method="post" action="/tiendanube/RegisterProcess" enctype="multipart/form-data">
    <div class="MainRegistro">

        <div class="border-bottom">
            <h2 class="TituloRegistro">Mis datos</h2>
        </div>

        <div class="FormularioPrincipal">
            <div class="border-bottom subtitulo">
                <p class="TypeImput">Por favor, completá la siguiente información</p>
            </div>
            <br>

            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">
                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-6 text-md-right">
                            <label class="correo text-md-right"><div class="d-flex align-items-center"><p>Tipo de documento</p><span class="asterisco">*</span></div></label>
                        </div>

                        <div class="col-md-6 col">
                            <select ayuda="Tipo de documento: Ej. DNI,  etc." class="form-control form-select form-select-sm" name="DocumentType" id="tipo_documento" data-val="true" data-val-required="El campo es requerido">
                                <option value="" selected="selected">Seleccionar...</option>
                                @foreach (var documentType in ViewBag.DocumentTypes)
                                {
                                    <option value="@documentType.DocumentName">@documentType.DocumentName</option>
                                }

                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="DocumentType" data-valmsg-replace="true"></span>
                        </div>

                    </div>

                </div>
                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-5 text-md-right">
                            <label class="correo text-md-right"><div class="d-flex align-items-center"><p>DNI / CUIL / CUIT</p><span class="asterisco">*</span></div></label>
                        </div>

                        <div class="col-md-6">
                            <input ayuda="Número de documento a quien se facturará el servicio. Sin puntos intermedios" type="text" name="DocumentNumber" id="documento" class="form-control" value="" autocomplete="off" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="DocumentNumber" data-valmsg-replace="true"></span>
                        </div>

                    </div>

                </div>
            </div>

            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3 divNameContainer">

                    <div class="mb-3 row d-flex align-items-center height-input divLastName">

                        <div class="col-md-6 text-md-right divLastName" >
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Apellido</p><span class="asterisco">*</span></div></label>
                        </div>
                        <div class="col-md-6 col divLastName">
                            <input ayuda="Ingresá el apellido a quien se le facturará" type="text" name="LastName" id="apellido" class="form-control" value="" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span>
                        </div>

                    </div>

                </div>

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3 divNameContainer">

                    <div class="mb-3 row d-flex align-items-center height-input divNameContainer">

                        <div class="col-md-5 text-md-right divNameContainer">
                            <label class="text-md-right correo"><div class="d-flex align-items-center divName"><p>Nombre</p><span class="asterisco">*</span></div></label>
                        </div>
                        <div class="col-md-6 divNameContainer">
                            <input ayuda="Nombre a quien se le facturará" type="text" name="Name" id="nombre" class="form-control" value="" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                        </div>

                    </div>

                </div>

            </div>

            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-6 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Correo Electrónico</p><span class="asterisco">*</span></div></label>
                        </div>

                        <div class="col-md-6 col">
                            <input ayuda="Escriba su correo electrónico" type="text" name="Email" class="form-control" value="" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                </div>

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-5 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Teléfono</p><span class="asterisco">*</span></div></label>
                        </div>
                        <div class="col-md-6">
                            <input ayuda="Teléfono de contacto" type="tel" name="CellPhone" id="telefono" class="form-control" value="" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="CellPhone" data-valmsg-replace="true"></span>
                        </div>

                    </div>

                </div>
            </div>


            @*<div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-6 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Condición impositiva</p><span class="asterisco">*</span></div></label>
                        </div>
                        <div class="col-md-6 col">
                            <select class="form-control form-select form-select-sm" name="condicion_impositiva" id="condicion_impositiva" ayuda="Condición impositiva de la persona o empresa a quien se le facturará el servicio">
