                            </select>
                        </div>
                    </div>

                </div>

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">
                </div>

            </div>*@

            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-6 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Contraseña</p><span class="asterisco">*</span></div></label>
                        </div>

                        <div class="col-md-6 col">
                            <input ayuda="Escriba su contraseña" type="password" name="password" class="form-control" value="" >
                        </div>

                    </div>

                </div>

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-5 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Confimar contraseña</p><span class="asterisco">*</span></div></label>
                        </div>

                        <div class="col-md-6">
                            <input ayuda="Confirmar contraseña" type="password" name="password" class="form-control" value="" >
                        </div>

                    </div>

                </div>

            </div>

            <br>
            <h5 class="DomicilioTitulo">Domicilio</h5>
            <br>

            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">
                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-6 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Calle</p><span class="asterisco">*</span></div></label>
                        </div>

                        <div class="col-md-6 col">
                            <input ayuda="Calle del domicilio de facturación" type="text" name="Street" id="calle" class="form-control" value="" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="Street" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                </div>

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-5 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Altura</p><span class="asterisco">*</span></div></label>
                        </div>

                        <div class="col-md-6">
                            <input ayuda="Número del domicilio de facturación" type="text" name="StreetNumber" id="altura" class="form-control" value="" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="StreetNumber" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">
                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-6 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Piso</p><span class="asterisco"></span></div></label>
                        </div>

                        <div class="col-md-6 col">
                            <input ayuda="Piso del domicilio de facturación" type="text" name="Floor" id="piso" class="form-control" value="">
                        </div>

                    </div>

                </div>
                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-5 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Departamento</p><span class="asterisco"></span></div></label>
                        </div>
                        <div class="col-md-6">
                            <input ayuda="Departamento del domicilio de facturación" type="text" name="Depto" id="departamento" class="form-control" value="" >
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">
                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-6 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Provincia</p><span class="asterisco">*</span></div></label>
                        </div>
                        <div class="col-md-6 col">
                            <select ayuda="Provincia del domicilio de facturación" class="form-control form-select form-select-sm" name="City" id="provincia" data-val="true" data-val-required="El campo es requerido">
                                <option value="" selected="selected">Seleccionar...</option>
                                <option value="B">BUENOS AIRES</option>
                                <option value="C">CAPITAL FEDERAL</option>
                                <option value="K">CATAMARCA</option>
                                <option value="H">CHACO</option>
                                <option value="U">CHUBUT</option>
                                <option value="X">CORDOBA</option>
                                <option value="W">CORRIENTES</option>
                                <option value="E">ENTRE RIOS</option>
                                <option value="P">FORMOSA</option>
                                <option value="Y">JUJUY</option>
                                <option value="L">LA PAMPA</option>
                                <option value="F">LA RIOJA</option>
                                <option value="M">MENDOZA</option>
                                <option value="N">MISIONES</option>
                                <option value="Q">NEUQUEN</option>
                                <option value="R">RIO NEGRO</option>
                                <option value="A">SALTA</option>
                                <option value="J">SAN JUAN</option>
                                <option value="D">SAN LUIS</option>
                                <option value="Z">SANTA CRUZ</option>
                                <option value="S">SANTA FE</option>
                                <option value="G">SANTIAGO DEL ESTERO</option>
                                <option value="V">TIERRA DEL FUEGO</option>
                                <option value="T">TUCUMAN</option>
                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="City" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                </div>
                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">

                        <div class="col-md-5 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Localidad</p><span class="asterisco">*</span></div></label>
                        </div>

                        <div class="col-md-6">
                            <input ayuda="Localidad del domicilio de facturación" type="text" name="Location" id="localidad" class="form-control" value="" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="Location" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                </div>

            </div>

            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">

                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">

                    <div class="mb-3 row d-flex align-items-center height-input">
                        <div class="col-md-6 text-md-right">
                            <label class="text-md-right correo"><div class="d-flex align-items-center"><p>Código postal</p><span class="asterisco">*</span></div></label>
                        </div>
                        <div class="col-md-6 col">
                            <input ayuda="Código postal del domicilio. Solo los 4 números, por ejemplo: 1842 " type="text" name="CPA" id="cp" class="form-control" value="" data-val="true" data-val-required="El campo es requerido">
                            <span class="text-danger field-validation-valid" data-valmsg-for="CPA" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                </div>
                <div class="col-12 col-sm-12 col-md-6 pr-3 pl-3">
                </div>

            </div>
            <br>
            <div class="col-12 d-flex flex-column flex-sm-column flex-md-row flex-lg flex-xl-row">
                <span class="Error">
                    @{
                        if (ViewBag.Error)
                        {
                            <span>@ViewBag.ErrorMessage</span>
                        }
                    }
                </span>
            </div>
            <div class="text-right pr-3">
                <button class="BotonGuardardatos">Guardar datos</button>
            </div>
            <br>

        </div>
    </div>
</form>

    @{
    }
